{
  "version": "0.0.1",
  "name": "@project/app",
  "exports": "./main.ts",
  "imports": {
    "@kalena/framework": "jsr:@kalena/framework@^0.1.6",
    "class-variance-authority": "npm:class-variance-authority@^0.7.1",
    "clsx": "npm:clsx@^2.1.1",
    "tailwind-merge": "npm:tailwind-merge@^3.0.1",
    "tailwindcss": "npm:tailwindcss@^4.0.6",
    "@comp/": "./src/components/",
    "@layouts/": "./src/layouts/",
    "@sections/": "./src/sections/",
    "@pages/": "./src/pages/",
    "@permissions/": "./src/permissions/",
    "@api/": "./src/api/"
  },
  "nodeModulesDir": "auto",
  "tasks": {
    "typecheck": "deno check .",
    "lint": "deno lint .",
    "fmt": "deno fmt .",
    "tailwind": "./tailwindcli -i ./src/main.css -o ./public/main.css --minify --watch",
    "dev": "deno run --unstable-otel --unstable-temporal --allow-net --allow-read --allow-env --watch ./src/main.ts",
    "start": "deno run --unstable-otel --unstable-temporal --allow-net --allow-read --allow-env --watch ./src/main.ts",
    "comp": "deno run --allow-read --allow-net --allow-write https://raw.githubusercontent.com/Hortashaorg/auro/1d96668d75bd04c5eed31cc99933bfdc0a06bd60/services/app/components/cli.ts"
  },
  "fmt": {
    "exclude": ["src/public/main.css"]
  },
  "compilerOptions": {
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": true,
    "jsx": "precompile",
    "jsxImportSource": "jsr:@hono/hono@4.7.1/jsx"
  }
}

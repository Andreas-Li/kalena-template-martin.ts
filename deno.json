{
    "version": "0.0.1",
    "name": "project",
    "exports": "./main.ts",
    "imports": {
      "@kalena/framework": "jsr:@kalena/framework@^0.1.3",
      "class-variance-authority": "npm:class-variance-authority@^0.7.1",
      "clsx": "npm:clsx@^2.1.1",
      "tailwind-merge": "npm:tailwind-merge@^3.0.1",
      "tailwindcss": "npm:tailwindcss@^4.0.6",
      "@comp/": "./src/components/",
      "@layouts/": "./src/layouts/",
      "@sections/": "./src/sections/",
      "@pages/": "./src/pages/",
      "@permissions/": "./src/permissions/",
      "@api/": "./src/api/"
    },
    "nodeModulesDir": "auto",
    "tasks": {
      "typecheck": "deno check .",
      "lint": "deno lint .",
      "fmt": "deno fmt .",
      "tailwind": "./tailwindcli -i ./main.css -o ./public/main.css --minify --watch",
      "dev": "deno run --unstable-otel --unstable-temporal --allow-net --allow-read --allow-env --watch ./main.ts",
      "start": "deno run --unstable-otel --unstable-temporal --allow-net --allow-read --allow-env --watch ./main.ts",
      "comp": "deno run --allow-read --allow-net --allow-write https://raw.githubusercontent.com/Hortashaorg/auro/df9d2d837333e30bba898199b63d6e6d7352b4ef/packages/components/cli.ts"
    },
    "fmt": {
      "exclude": ["public/main.css"]
    }
  }
  